#!/bin/bash

function usage(){
  echo -e "error\ncurrect usage: \n./problem (name) -l (lang)"
}

if [ $# -eq 1 ]; then
  mkdir $1
  exit 0
fi

if [ $# -eq 3 ]; then
  if [ $2 == "-l" ]; then
    mkdir $1
    touch "$1/main.$3"
    if [ $3 == "cpp" ]; then
      touch "$1/makefile"
      echo -e "bin: main.cpp\n\tg++ -std=c++11 -Wall -Wextra -pedantic -O2 -o bin main.cpp" >> "$1/makefile"
    fi
    exit 0
  fi
  echo -e "$(usage)"
  exit 1
fi

echo -e "$(usage)"
